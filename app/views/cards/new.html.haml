.card-wrapper
  .card-header
    = link_to root_path do
      = image_tag "logo.png",size:'185x49'
  .card-body
    = render "shared/mypage_flex_left"
    .card-contents
      .card-head
        クレジットカード情報入力
      .card-details
        .form-group
          = form_tag(pay_cards_path, method: :post, id: 'charge-form',  name: "inputForm") do
            %label.card-details-document カード番号
            %label.priority 必須 
            .card-input
              = text_field_tag "number", "", class: "number", placeholder: "半角数字のみ" ,maxlength: "16", type: "text", id: "card_number"
              %br
            .card-blands
              .card-image
                = image_tag 'https://www-mercari-jp.akamaized.net/assets/img/card/visa.svg?35314277', size: '49x25'
              .card-image
                = image_tag 'https://www-mercari-jp.akamaized.net/assets/img/card/master-card.svg?35314277', size: '34x20'
              .card-image
                = image_tag 'https://www-mercari-jp.akamaized.net/assets/img/card/saison-card.svg?35314277', size: '30x20'
              .card-image
                = image_tag 'https://www-mercari-jp.akamaized.net/assets/img/card/jcb.svg?35314277', size: '32x20'
              .card-image
                = image_tag 'https://www-mercari-jp.akamaized.net/assets/img/card/american_express.svg?35314277', size: '21x20'
              .card-image
                = image_tag 'https://www-mercari-jp.akamaized.net/assets/img/card/dinersclub.svg?35314277', size: '32x20'
              .card-image
                = image_tag 'https://www-mercari-jp.akamaized.net/assets/img/card/discover.svg?35314277', size: '32x20'
            .card-limit
              %label.card-details-document 有効期限
              %label.priority 必須
            .input-card-date
              .input-card-date__month
                %select#exp_month{name: "exp_month", type: "text"}
                  %option{value: ""} --
                  %option{value: "1"}01
                  %option{value: "2"}02
                  %option{value: "3"}03
                  %option{value: "4"}04
                  %option{value: "5"}05
                  %option{value: "6"}06
                  %option{value: "7"}07
                  %option{value: "8"}08
                  %option{value: "9"}09
                  %option{value: "10"}10
                  %option{value: "11"}11
                  %option{value: "12"}12
                %span.input-card-between 月
              .input-card-date__year
                %select#exp_year{name: "exp_year", type: "text"}
                  %option{value: ""} --
                  %option{value: "2019"}19
                  %option{value: "2020"}20
                  %option{value: "2021"}21
                  %option{value: "2022"}22
                  %option{value: "2023"}23
                  %option{value: "2024"}24
                  %option{value: "2025"}25
                  %option{value: "2026"}26
                  %option{value: "2027"}27
                  %option{value: "2028"}28
                  %option{value: "2029"}29
                %span.input-card-between  年
                %br
            .security-box
              %label.card-details-document セキュリティコード
              %label.priority 必須
            = text_field_tag "cvc", "", class: "cvc", placeholder: "カード背面3~4桁の番号", maxlength: "4", id: "cvc"
            .why-card-backnumber
              .why-card-backnumber__text
                %span.question
                  ?
                %p.question-body カード裏面の番号とは？
              .card-description
                .card-description__text
                  カードの裏面をご参照ください
                = image_tag 'https://www-mercari-jp.akamaized.net/assets/img/signup/seq-card.png?35314277',size: '240x105'
            #card_token
            = submit_tag "登録する", id: "token_submit"
= render "shared/top-footer"